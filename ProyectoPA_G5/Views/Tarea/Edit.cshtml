@model TareaRequest

@{
    ViewData["Title"] = "Editar tarea";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="IdUsuario" /> <!-- Mantener el Id asignado -->

    <div class="form-group">
        <label asp-for="Descripcion" class="control-label"></label>
        <input asp-for="Descripcion" class="form-control" />
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IdPrioridad" class="control-label">Prioridad</label>
        <select asp-for="IdPrioridad" class="form-control" asp-items="ViewBag.Prioridades">
            <option value="">-- Seleccione Prioridad --</option>
        </select>
        <span asp-validation-for="IdPrioridad" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IdEstadoTarea" class="control-label">Estado</label>
        <select asp-for="IdEstadoTarea" class="form-control" asp-items="ViewBag.Estados">
            <option value="">-- Seleccione Estado --</option>
        </select>
        <span asp-validation-for="IdEstadoTarea" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CreadaPor" class="control-label">Usuario que crea</label>
        <select asp-for="CreadaPor" class="form-control" asp-items="ViewBag.Usuarios">
            <option value="">-- Seleccione Usuario --</option>
        </select>
        <span asp-validation-for="CreadaPor" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
