@model Proyecto.BLL.Dtos.Responses.TareaResponse

<h2>Eliminar Tarea</h2>

<div>
    <h4>@Model.Descripcion</h4>
    <dl class="dl-horizontal">
        <dt>Usuario asignado:</dt>
        <dd>@Model.NombreUsuarioAsignado</dd>

        <dt>Creada por:</dt>
        <dd>@Model.NombreCreador</dd>

        <dt>Prioridad:</dt>
        <dd>@Model.Prioridad</dd>

        <dt>Estado:</dt>
        <dd>@Model.Estado</dd>
    </dl>

    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="IdTarea" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
